<div class="container">
  <div class="row">
    <div class="col-10 mx-auto mt-3 mb-3">
      <h2 class="d-inline">注文履歴一覧</h2>
      <table class="table col-10 mx-auto ">
        <thead class="table-dark mb-5 pb-5">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order) %>
              </td>
              <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
              <td><%= order.items_amount %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row justify-content-center">
    <div>
     <%= paginate @orders %>
    </div>
  </div>
  </div>
</div>