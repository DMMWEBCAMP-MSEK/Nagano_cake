<div class="container">
  <div class="row">
    <div class="col-10 mx-auto mt-3 mb-3">
      <h3 class="px-3">
        <span class="px-3" style="background-color:lightgray">注文履歴一覧</span>
      </h3>
      <table class="table col-10 mx-auto mt-3">
        <thead class="table-dark mb-5 pb-5">


<!--<div class="container mb-5">-->
<!--  <div class="row">-->
<!--    <div class="col-10 mx-auto">-->
<!--      <div class="mt-3 mb-2 pl-3">注文履歴一覧</div>-->
<!--      <table class="table">-->
<!--        <thead class="table-dark mb-5 pb-5">-->
          <tr>
            <th class="align-middle">購入日時</th>
            <th class="align-middle">購入者</th>
            <th class="align-middle text-center">注文個数</th>
            <th class="align-middle">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="align-middle">
                <%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order) %>
              </td>
              <td class="align-middle"><%= order.customer.last_name %> <%= order.customer.first_name %></td>
              <td class="align-middle text-center"><%= order.items_amount %></td>
              <td class="align-middle"><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="footer container col-md-6 offset-md-3 py-2">
      <div class="pagination justify-content-center">
        <%= paginate @orders, class: "text-decoration-underline" %>
      </div>
    </div>
  </div>
</div>
