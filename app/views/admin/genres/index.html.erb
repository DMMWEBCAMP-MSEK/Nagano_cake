<h2 class="mt-3">ジャンル一覧・追加</h2>
 <%= form_with model: genre, url: genres_path, method: :post do |f| %>
  <label for="name">ジャンル名</label><br>
  <%= f.text_field :name, class:"form-control" %>
  <%= f.submit 'Create genre', class:"btn btn-success" %>
 <% end %><br>
<table>
     <thead>
      <tr>
        <th></th>
        <th>ジャンル</th>
        <th colspan="3"></th>
      </tr>
     </thead>

     <tbody>
     <% @genres.each do |genre| %>
      <tr>
        <td>
         <%= genre.name %>
        </td>
        <td>
          <%= link_to edit_admin_genre_path(genre.id), class:"btn btn-success" %>
        </td>
       </tr>
      <% end %>
      </tbody>
      </table>