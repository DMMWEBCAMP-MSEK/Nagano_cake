<h2>商品新規登録</h2>

<%= form_with model:@item do |f| %>
  <div class="form-group">
    <%= f.label :商品画像 %>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_area :introduction %>
  </div>
  <!--<div class="form-group">-->
    <%#= f.label :ジャンル %>
    <%#= f.select :genre_id, Jenre.all, :id,{prompt: "--選択してください"} %>
  </div>
  <div class="form-group">
    <%= f.label :税抜価格 %>
    <%= f.number_field :price %>
  </div>
  <div class="form-group">
    <%= f.label :販売ステータス %>
    <%= f.radio_button :sales_status, "0" %>
    <%= f.label :sales_status, "販売中" %>
    <%= f.radio_button :sales_status, "1" %>
    <%= f.label :sales_status, "販売停止中" %>
  </div>
<% end %>
