<div class="container">
    <div class="row">
      <div class="col-10 mx-auto">
    <div class="container">
      <div class="row">
      <div class="col-lg-10">
      <h3 class="m-5">
        <span class="px-3" style="background-color:lightgray">商品一覧</span>
      </h3>
      </div>
      <div class="col-lg-2 mb-3 mt-5 text-right">
        <div class="d-inline">
            <%= link_to "+", new_admin_item_path, class: "btn btn-white shadow rounded-circle text-secondary mr-5" %>
          </div>
        </div>
    </div>
      </div>
        <table class="table col-10 mx-auto">
          <thead class="table-dark">
            <tr>
              <th class="align-middle">商品ID</th>
              <th class="align-middle">商品名</th>
              <th class="align-middle">税抜価格</th>
              <th class="align-middle">ジャンル</th>
              <th class="align-middle">ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td class="align-middle"><%= item.id %></td>
                <td class="align-middle"><u><%= link_to item.name, admin_item_path(item) %></u></td>
                <td class="align-middle"><%= item.price.to_s(:delimited) %></td>
                <td class="align-middle"><%= item.genre.name %></td>
                <td class="align-middle"><%= item.sales_status_i18n %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
        <div class="footer container col-md-6 offset-md-3 py-2">
        <div class="pagination justify-content-center">
          <u><%= paginate @items %></u>
      </div>
    </div>
</div>