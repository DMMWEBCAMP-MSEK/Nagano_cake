<div class="conteiner">
  <div class="row">
    <div class="col-10 mx-auto mt-3 mb-3">
      <h2 class="d-inline">商品一覧</h2>
      <div class="d-inline">
        <%= link_to "+", new_admin_item_path, class: "btn btn-white shadow rounded-circle text-secondary ml-5" %>
      </div>
    </div>
    <table class="table col-10 mx-auto">
      <thead class="table-dark">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.sales_status_i18n %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</div>