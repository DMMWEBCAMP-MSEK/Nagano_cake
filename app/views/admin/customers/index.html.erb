<div class="container mt-3" style="margin-bottom: 6vh;">
  <div class="row">
    <h3 class="px-3"style="margin-left: 5vh;">
      <span class="px-3" style="background-color:lightgray">会員一覧
      </span>
    </h3>
  </div>
  <div class="row">
    <table class="table col-10 mx-auto mt-3">
      <thead class="table-dark" >
        <tr>
          <th class="align-middle">会員ID</th>
          <th class="align-middle">氏名</th>
          <th class="align-middle">メールアドレス</th>
          <th class="align-middle">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
           <td class="align-middle"><%= customer.id %></td>
           <td>
             <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.first_name %><%= customer.last_name %>
             <% end %>
           </td>
           <td class="align-middle"><%= customer.email %></td>
           <% if customer.is_deleted == false %>
              <td><h5 class="text-success font-weight-bold">有効</h5></td>
           <% else %>
              <td><h5 class="font-weight-bold" style="color: lightgray">退会</h5></td>
           <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div><br>
  <div class="row justify-content-center">
    <div class="mb-5">
      <%= paginate @customers %>
    </div>
  </div>
</div>