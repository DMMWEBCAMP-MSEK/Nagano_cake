<div class="container"></br>
<h3>
  <span class="px-3" style="background-color:lightgray">
    <strong><%= @customer.last_name %><%= @customer.first_name %></strong>さんの<strong>会員情報編集</strong>
  </span>
</h3>
<table class="table table-borderless align-middle">
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= @customer.last_name %> <%= @customer.first_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.post_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td colspan=2><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.phone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td class="text-success font-weight-bold"><%= @customer.is_deleted ? '退会' : '有効'  %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %></td>
    <td><%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-primary" %></td>
  </tr>
</table>

