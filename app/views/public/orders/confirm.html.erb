<div class="dark">注文情報確認</div>

<div class="container-fluid">
<div class="row">

  <div class="float-left">
    <div class="col-xs-12 col-md-6">
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
    <th>
      商品名
     </th>
     <th>
      単価(税込)
     </th>
     <th>
      数量
     </th>
     <th>
      小計
     </th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>

  <tbody>
    <tr>
      <td>
        <%= image_tag cart_item.item.image, size: "50x50" %>
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= (cart_item.item.with_tax_price).to_s(:delimited) %>
      </td>
      <td>
        <%= cart_item.amount %>
      </td>
      <td>
        <%= (cart_item.subtotal).to_s(:delimited) %>
      </td>
    </tr>
  </tbody>

  <% end %>

</table>
</div>
</div>

<div class="float-right">
  <div class="col-xs-12 col-md-6">
<table class="table table-bordered">
  <thead  class="thead-dark">
    <tr>
     <th>
      送料
     </th>
    　<td>
       <%= @cost %>
     </td>
    </tr>

    <tr>
     <th>
      商品合計
     </th>
    <td>
       <%= @total.to_s(:delimited, delimiter: ',') %>
     </td>
    </tr>

    <tr>
     <th>
      請求金額
     </th>
    　<td>
        <%= (@cost + @total).to_s(:delimited, delimiter: ',') %>
      </td>
    </tr>

  </thead>

</table>
</div>
</div>

</div>
</div>

<table>
  <thead>
    <tr>
      <th>
        支払方法
      </th>
      <td>
        <%= @order.payment_method_i18n %>
      </td>
    </tr>
    <tr>
      <th>
        お届け先
      </th>
      <td>
        <%= @order.post_code %>
        <%= @order.address %></br>
        <%= @order.name %>
      </td>
    </tr>
  </thead>
</table>

<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>

  <%= f.hidden_field :name %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :post_code %>
  <%= f.hidden_field :total_payment, value: @total %>
  <%= f.hidden_field :shipping_cost, value: 800 %>
  <%= f.hidden_field :payment_method %>

<div class="field col-sm-12 text-center mt-2">
  <%= f.submit "注文を確定する", class: "btn btn-success center-block" %>
</div>

<% end %>
