<div class="dark">注文情報入力</div>

<%= form_with model: @order, url: confirm_orders_path, method: :post, local: true do |f| %>

<div>
  支払方法
</div>

<div class="ml-3">
<%= f.radio_button :payment_method, Order.payment_methods.key(0),{:checked => true} %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
</div>

<div class="ml-3">
<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
</div>

<div>
  お届け先
</div>

<div class="ml-3">
  <%= f.radio_button :address_number, 1 %>
  <%= f.label :address_number_1, "ご自身の住所" %>
</div>

  <div class="ml-3">
    〒<%= current_customer.post_code %>
    <%= current_customer.address %>
  </div>
  <div class="ml-3">
    <%= current_customer.first_name %>
    <%= current_customer.last_name %>
  </div>

<div class="ml-3">
  <%= f.radio_button :address_number, 2 %>
  <%= f.label :address_number_2, "登録済住所から選択" %></br>
  <%= f.collection_select :customer_id, @addresses, :id, :postcode_and_address,{prompt: "選択してください"} %>
</div>

<div class="ml-3">
  <%= f.radio_button :address_number, 3 %>
  <%= f.label :address_number_3, "新しいお届け先" %>
</div>

 <table class="ml-3">
  <thead>
  <tr>
    <td><%= f.label :post_code, "郵便番号(ハイフンなし)" %></td>
    <td>
      <%= f.text_field :post_code %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :address, "住所" %></td>
    <td>
      <%= f.text_field :address %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :name, "宛名" %></td>
    <td>
      <%= f.text_field :name %>
    </td>
  </tr>
  </thead>
  </table>

<div class="field col-sm-12 text-center mt-2">
<%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
</div>

  <% end %>