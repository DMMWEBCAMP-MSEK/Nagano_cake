<div class="container">
  <div class="row">
    <div class="h5 m-4 float-left bg-secondary text-light">  注文情報入力  </div>
    <%= render "layouts/errors", obj: @order %>

    <div class="col-12">
      <%= form_with model: @order, url: confirm_orders_path, method: :post, local: true do |f| %>
      <div>
        <div class="font-weight-bold">支払方法</div>
        <div class="form-group ml-4">
          <div>
            <%= f.radio_button :payment_method, Order.payment_methods.key(0),{:checked => true} %>
            <%#= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
          </div>
          <div>
            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%#= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
          </div>
        </div>
      </div>
      <div>
        <div class="font-weight-bold">お届け先</div>
        <div class="form-group ml-4">
          <%= f.radio_button :address_number, 1 %>
          <%= f.label :address, "ご自身の住所" %></br>
          <div class="ml-4">
        〒<%= current_customer.post_code %> <%= current_customer.address %></br>
          <%= current_customer.first_name %><%= current_customer.last_name %>
          </div>
        </div>
      </div>
      <div>
        <div class="form-group ml-4">
          <%= f.radio_button :address_number, 2 %>
          <%= f.label :address, "登録済住所から選択" %></br>
          <%= f.collection_select :customer_id, @addresses, :id, :postcode_and_address,{prompt: "選択してください"}, class: "form-control col-9 ml-4" %>
        </div>
      </div>
      <div>

        <div class="ml-4">
          <%= f.radio_button :address_number, 3 %>
          <%= f.label :address, "新しいお届け先" %></br>

          <%= f.label :post_code, "郵便番号(ハイフンなし)", class: "col-3 ml-2" %>
          <%= f.text_field :post_code, class: "col-sm-3"  %></br>

          <%= f.label :address, "住所", class: "col-3 ml-2" %>
          <%= f.text_field :address, class: "col-sm-5" %></br>

          <%= f.label :name, "宛名", class: "col-3 ml-2" %>
          <%= f.text_field :name, class: "col-sm-3" %>
        </div>

      </div>


      <div class="field col-sm-12 text-center mt-2">
        <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
      </div>

      <% end %>
    </div>
  </div>
</div>
