<div class="dark">注文情報確認</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
    <th>
      商品名
     </th>
     <th>
      単価(税込)
     </th>
     <th>
      数量
     </th>
     <th>
      小計
     </th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>

  <tbody>
    <tr>
      <td>

        <%= cart.item.name %>
      </td>
      <td>
        <%= (cart_item.item.with_tax_price).to_s(:delimited) %>
      </td>
      <td>
        <%= cart.amount %>
      </td>
      <td>
        <%= (cart_item.subtotal).to_s(:delimited) %>
      </td>
    </tr>
  </tbody>

  <% end %>

</table>

<table class="table table-bordered">
  <thead  class="thead-dark">
    <tr>
     <th>
      送料
     </th>
    </tr>

    <tr>
     <th>
      商品合計
     </th>
    </tr>

    <tr>
     <th>
      請求金額
     </th>
    </tr>

  </thead>
  <tbody>

    <tr>
     <td>
       <%= @cost %>円
     </td>
    </tr>

    <tr>
     <td>
       <%= @total.to_s(:delimited, delimiter: ',') %>
     </td>
    </tr>

    <tr>
      <td>
        <%= @cost + @total %>
      </td>
    </tr>

  </tbody>
</table>

<h2>支払方法</h2>



<h2>お届け先</h2>

<%= @order.address %>

<%= form_with model: @order, url: thanks_order_path, local: true do |f| %>

  <%= f.hidden_field :name %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :total_price, value: @total %>

<%= f.submit "情報入力へ進む", class: "btn btn-sm btn-success" %>

<% end %>