<% @cart_items.each do |cart| %>

<table class="table table-bordered">

  <thead class="thead-dark">

    <tr>

    <th>
      商品名
     </th>
     <th>
      単価(税込)
     </th>
     <th>
      数量
     </th>
     <th>
      小計
     </th>

    </tr>

  </thead>

  <tbody>
    <tr>
      <td>

        <%= cart.item.name %>
      </td>
      <td>
        <%= (cart.item.price).to_s(:delimited) %>
      </td>
      <td>
        <%= cart.amount %>
      </td>
      <td>
        <%= (cart.item.price*cart.amount).to_s(:delimited) %>
      </td>

    </tr>

  </tbody>

</table>

<% end %>

