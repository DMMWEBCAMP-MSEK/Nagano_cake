<div class="container">
  <div class="row">
    <h3 class="ml-5 mt-3 mb-3">
        <span class="px-3 ml-5" style="background-color:lightgray">注文履歴一覧</span>
      </h3>
  </div>

  <div class="row">
    <div class="col-10 offset-1">
      <table class="table table-hover table-bordered admin_customers_table">
        <thead class="thead-dark">
          <tr>
            <th class="align-middle">注文日</th>
            <th class="align-middle">配送先</th>
            <th class="align-middle">注文商品</th>
            <th class="align-middle">支払金額</th>
            <th class="align-middle">ステータス</th>
            <th class="align-middle">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td class="align-middle">
                〒<%= order.customer.post_code %></br>
                <%= order.address %> </br>
                <%= order.name %>
              </td>
              <td class="align-middle">
                <% order.order_items.each do |order_item|%>
                ・  <%= order_item.item.name %></br>
                <% end %>
              </td>
              <td class="align-middle"><%= (order.total_payment).to_s(:delimited) %>円</td>
              <td class="align-middle"><%= order.status_i18n %></td>
              <td class="align-middle"><%= link_to "表示する", order_path(order), class: "btn-sm btn-primary"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="mb-5">
     <%= paginate @orders %>
    </div>
  </div>
</div>