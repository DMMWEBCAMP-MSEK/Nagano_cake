<h2>新規会員登録</h2>

<%= form_with model: @customer, url: registration_path(resource_name), local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
 <table class="table-borderless">
  <tbody>
  <tr>
    <th scope="row">名前</th>
    <td>
      <div class="form-group"><%= f.label :first_name, "(姓)" %></div>
    </td>
    <td>
      <div class="form-group"><%= f.text_field :first_name, autofocus: true, class: "name" %></div>
    </td>
    <td>
      <div class="form-group"><%= f.label :last_name, "(名)" %></div>
    </td>
    <td>
     <div class="form-group"><%= f.text_field :last_name, autofocus: true, class: "name" %></div>
    </td>
  </tr>
  <tr>
    <th scope="row">フリガナ</th>
    <td>
      <div class="form-group"><%= f.label :first_name_kana, "(セイ)" %></div>
    </td>
    <td>
      <div class="form-group"><%= f.text_field :first_name_kana, autofocus: true, class: "name" %></div>
    </td>
    <td>
      <div class="form-group"><%= f.label :last_name_kana, "(メイ)" %></div>
    </td>
    <td>
      <div class="form-group"><%= f.text_field :last_name_kana, autofocus: true, class: "name" %></div>
    </td>
    </div>
  </tr>
  <tr>
    <th scope="row">メールアドレス</th>
    <td></td>
    <td>
      <div class="form-group"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </td>
    <td></td>
  </tr>
  <tr>
    <th scope="row">郵便番号(ハイフンなし)</th>
    <td></td>
    <td>
     <div class="form-group"><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %></div>
　　</td>
　　<td></td>
　</tr>
　<tr>
    <th scope="row">住所</th>
    <td></td>
    <td>
      <div class="form-group"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></div>
　　</td>
　　<td></td>
　</tr>
　<tr>
    <th scope="row">電話番号(ハイフンなし)</th>
    <td></td>
    <td>
      <div class="form-group"><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></div>
    </td>
    <td></td>
  </tr>
  <tr>
    <th scope="row">パスワード(6文字以上)</th>
    <td></td>
    <td>
      <div class="form-group"><%= f.password_field :password, autocomplete: "new-password" %></div>
      </td>
    <td></td>
  </tr>
  <tr>
    <th scope="row">パスワード(確認用)</th>
    <td></td>
    <td>
      <div class="form-group"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </td>
    <td></td>
  </tr>
  <tr>
    <th></th>
    <td></td>
    <td>
      <div class="form-group"><%= f.submit "新規登録" ,class: "btn btn-success btn-block" %></div>
   </td>
   <td></td>
    <td></td>
  </tbody>
  </table>
<% end %>

<div>既に登録済みの方</div>

<div>
<%= link_to 'こちら', new_customer_session_path %>からログインしてください。
</div>

