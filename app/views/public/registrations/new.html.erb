<div class="container">
<h3>新規会員登録</h3>

<%= form_with model: @customer, url: registration_path(resource_name), local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<!--<form class="form-horizontal"-->
<div class="row align-items-center my-2">
  <div class="col-3">名前</div>
    <div class="col-3 form-inline">
      <%= f.label :first_name, "(姓)" %>
      <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
    </div> 
    <div class="offset-col1 col-3 form-inline">
      <%= f.label :last_name, "(名)" %>
      <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
    </div>
</div>

<div class="row align-items-center my-2">  
  <div class="col-3">フリガナ</div>
    <div class="col-3 form-inline">
      <%= f.label :first_name_kana, "(セイ)" %>
      <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
    </div>
    <div class="col-3 form-inline">
      <%= f.label :last_name_kana, "(メイ)" %>
      <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
    </div>
</div>

<div class="row my-2">
  <div class="col-3">メールアドレス</div>
    <div class="col-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
    </div>
</div>

<div class="row my2">
<div class="col-3">郵便番号(ハイフンなし)</div>
<div class="col-3">
<%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", class: "form-control" %>
</div>
</div>

<div class="row my-2">
  <div class="col-3">住所</div>
    <div class="col-7">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
    </div>
</div>

<div class="row my-2">
  <div class="col-3">電話番号(ハイフンなし)</div>
    <div class="col-3">
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control" %>
    </div>
</div>

<div class="row my-2">
  <div class="col-3">パスワード(6文字以上)</div>
    <div class="col-3">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
</div>

<div class="row my-2">
  <div class="col-3">パスワード(確認用)</div>
    <div class="col-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
</div>

<div class="row my-3">
  <div class="offset-3 col-sm-2">
    <%= f.submit "新規登録" ,class: "btn-block btn-success" %>
  </div>
</div>
<% end %>

<h3>既に登録済みの方</h3>
  
  <div>
  <%= link_to 'こちら', new_customer_session_path %>からログインしてください。
  </div>

</div>