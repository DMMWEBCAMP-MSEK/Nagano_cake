<h2>新規会員登録</h2>

<%= form_with model: @customer, url: registration_path(resource_name), local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
 <table>
  <thead>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
  <tr>
    <td>名前</td>
    <td>
    <div class="field">
      <%= f.label :first_name, "(姓)" %>
      <%= f.text_field :first_name, autofocus: true, class: "name" %>
    </td>
    <td>
      <%= f.label :last_name, "(名)" %>
      <%= f.text_field :last_name, autofocus: true, class: "name" %>
    </div>
    </td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td>
    <div class="field">
      <%= f.label :first_name_kana, "(セイ)" %>
      <%= f.text_field :first_name_kana, autofocus: true, class: "name" %>
    </td>
    <td>
      <%= f.label :last_name_kana, "(メイ)" %>
      <%= f.text_field :last_name_kana, autofocus: true, class: "name" %>
    </td>
    </div>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    </td>
    <td></td>
  </tr>
  <tr>
    <td>郵便番号(ハイフンなし)</td>
    <td>
    <div class="field">
      <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
    </div>
　　</td>
　　<td></td>
　</tr>
　<tr>
    <td>住所</td>
    <td>
    <div class="field">
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
　　</td>
　　<td></td>
　</tr>
　<tr>
    <td>電話番号(ハイフンなし)</td>
    <td>
    <div class="field">
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
    </div>
    </td>
    <td></td>
  </tr>
  <tr>
    <td>パスワード(6文字以上)</td>
    <td>
    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
      </td>
    <td></td>
  </tr>
  <tr>
    <td>パスワード(確認用)</td>
    <td>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    </td>
    <td></td>
  </tr>
  <tr>
    <td></td>
    <td>
    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  </td>
    <td></td>
  </tbody>
  </table>
<% end %>

<h2>既に登録済みの方</h2>

<div>
<%= link_to 'こちら', new_customer_session_path %>からログインしてください。
</div>

