<h3>配送先登録／一覧</h3>

<%= form_with model:@shipping_address, url: shipping_addresses_path, method: :post do |f| %>
<div class="form-group">
  <%= f.label :郵便番号 %>
  <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
</div>
<div class="form-group">
  <%= f.label :住所 %>
  <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
</div>
<div class="form-group">
  <%= f.label :宛名 %>
  <%= f.text_field :name, autofocus: true %>
</div>
<div class="form-group">
  <%= f.submit "新規登録" %>
</div>


<table>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @shipping_addresses.each do |shipping_address| %>
          <tr>
            <td><%= shipping_address.post_code %></td>
            <td><%= shipping_address.addewss %></td>
            <td><%= shipping_address.name %></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>