<h3>配送先登録／一覧</h3>

<%= form_with model:@shipping_address, url: shipping_addresses_path, method: :post do |f| %>
<table>
  <tr>
    <div class="form-group">
      <th><%= f.label :郵便番号 %></th>
      <td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %></td>
    </div>
  </tr>
  <tr>
    <div class="form-group">
      <th><%= f.label :住所 %></th>
      <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
    </div>
  </tr>
  <tr>
    <div class="form-group">
      <th><%= f.label :宛名 %></th>
      <td><%= f.text_field :name, autofocus: true %></td>
    </div>
  </tr>
</table>
<div class="form-group">
  <%= f.submit "新規登録" %>
</div>
<% end %>


<table>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @shipping_addresses.each do |shipping_address| %>
          <tr>
            <td><%= shipping_address.post_code %></td>
            <td><%= shipping_address.address %></td>
            <td><%= shipping_address.name %></td>
            <td><%= link_to "編集する", edit_shipping_address_path(shipping_address) %><%= link_to "削除する", shipping_address_path(shipping_address), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>