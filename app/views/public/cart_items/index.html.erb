<div class="container">
  <h3 class="mt-4">
    <span class="px-3" style="background-color:lightgray">ショッピングカート</span>
  </h3>

  　<% if current_customer.cart_items.present? %>
  　<% else %>
  　　<h1 class="font-weight-bold text-danger text-center">カートの中身は空です</h1>
  　<% end %>

  　<% if current_customer.cart_items.present? %>
  <div class="field col-sm-12 text-right mb-4">
    <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger ml-auto" %>
  </div>
    <% end %>

  <% if current_customer.cart_items.present? %>
  <div>

    <table class="table table-bordered">
      <thead class="thead-dark">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th class="text-center">数量</th>
          <th>小計</th>
          <th></th>
      </thead>
      <% @cart_items.each do |cart_item| %>
        <tbody>
            <tr>
              <td class:="align-middle">
                <%= image_tag cart_item.item.image, size: "50x50", class: "m-2"  %>
                <%= cart_item.item.name %>
              </td>
              <td class="align-middle">
                <%= cart_item.item.with_tax_price.to_s(:delimited) %>
              </td>
              <td class="align-middle text-center">
                <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
                  <%= f.number_field :amount, min: 1, max:10, id: "amount_cart",class: "m-2" %>
                  <%= f.submit "変更",class: "btn btn-success m-2" %>
                <% end %>
              </td>
              <td class="align-middle">
                <%= cart_item.subtotal.to_s(:delimited) %>
              </td>
              <td class="align-middle text-center">
                <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
        </tbody>
      <% end %>
    </table>

  </div>
  <% end %>

  <div class="container">
    <%= link_to '買い物を続ける', root_path, class: "mt-4 btn btn-primary" %>
    <% if current_customer.cart_items.present? %>
      <div class="float-right">
        <table class="table table-bordered">
          <thead class="thead-dark">
            <tr>
             <th>
              合計金額
             </th>
             <td>
              <%= @total.to_s(:delimited, delimiter: ',') %>
             </td>
            </tr>
          </thead>
        </table>
      </div>
    <% end %>
    <% if @cart_items.count > 0 %>
    <div class="row">
      <div class="col-sm-12 text-center mt-2">
          <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
      </div>
    </div>
    <% end %>
  </div>
</div>