<div class="container bg">
  <div class="row center">

    <!-- ジャンル -->
    <div class="col-md-3 mt-5">
      <table class="table table-bordered ml-1">
        <thead>
          <th>ジャンル一覧</th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <th><%= genre.name %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

      <div class="col-md-9 mt-3">
      <p class="h2 font-weight-bold">商品一覧（全<%= @items_count %>件）</p>
      <div class="container">
     <div class="row wrapper-grid">
        <% @selling_items.each do |item| %>


           <div>
        　   <div class="thumbnail">
        　  <%= link_to item_path(item.id) do %>
                <%= image_tag item.image, size: "150", class: "index-img" %>
              <% end %>
            </div>
            <div class="ml-3">
              <%= item.name%>
            </div>
            <div class="ml-3">
              ¥<%= item.price %>
            </div>
            </div>

        <% end %>
      </div>
       </div>
       </div>

  </div>
</div>
      <div class="justify-content-center">
        <%= paginate @selling_items %>
      </div>