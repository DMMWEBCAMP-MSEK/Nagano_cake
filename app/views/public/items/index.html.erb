<div class="container ml-4 mt-5">
  <div class="row">
    <!-- ジャンル -->
    <div class="col-md-2">
      <table class="table table-bordered ml-3">
                <thead>
                    <th>ジャンル一覧</th>
                </thead>
                <tbody>
                    <% @genres.each do |genre| %>
                    　　<tr>
                          <th><%= genre.name %></th>
                         </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-lg-10">
            <h2>商品一覧（全<%= @items_count %>件）</h2>
            <div id="container">



            <% @selling_items.each do |item| %>
        　　　<div class="item">
            　　　   <div class="img-area">
                    <%= link_to item_path(item.id) do %>
                     <%= image_tag item.image, size: "250", class: "index-img" %>
                    <% end %>
                  </div>
                  <div>
                    <%= item.name%>
                  </div>
                  <div>
                     ¥<%= item.price %>
                  </div>
                </div>
        　　　<% end %>
        　　</div>
        　　<div class="justify-content-center">
              <%= paginate @selling_items %>
        　　</div>
        </div>
    </div>
</div>