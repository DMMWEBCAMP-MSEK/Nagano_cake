<div class="container ml-4 mt-5">
  <div class="row">
    <div class="col-3">
      <div class="card-header text-white bg-dark ">ジャンル一覧</div>
      <div class="card-body">
        <% @genres.each do |genre| %>
          <p class="card-text"><%= genre.name %></p>
        <% end %>
      </div>
    </div>
    <div class = "col-lg-8">
      <%= image_tag @item.image, size: "340x220" %>
    　<div>
        　<h2><%= @item.name %></h2>
        　<div><%= @item.introduction %></div>
        　<div><strong>¥<%= @item.with_tax_price.to_s(:delimited) %></strong><small>（税込）</small></div>
        　<div class="text-danger"><%= notice %></div>
        　　<%= form_with model: @cart_item, url: cart_items_path, method: :post, local:true do |f| %>
            　<%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
            　<% if customer_signed_in? %>
            　 <%= f.submit "カートに入れる", class: " btn btn-primary" %>
            　<% else %>
            　 <%= link_to "カートに入れる", new_customer_session_path, class: "btn btn-primary" %>
            　<% end %>
            　<%= f.hidden_field :item_id, :value => @item.id %>

            　<!--遷移時に必要だが、ユーザーには見せないから-->
            <% end %>
        </div>
    </div>

</div>